{
  "name": "quick-chat",
  "version": "1.0.0",
  "description": "Modern chat application",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "build": "webpack --mode production",
    "build:frontend": "webpack --config webpack.config.frontend.js --mode production",
    "dev:frontend": "webpack --config webpack.config.frontend.js --mode development --watch",
    "build:enhanced": "webpack --config webpack.config.enhanced.js --mode production",
    "dev:enhanced": "webpack --config webpack.config.enhanced.js --mode development --watch",
    "sass": "sass assets/scss:assets/css --style=compressed --no-source-map",
    "sass:watch": "sass assets/scss:assets/css --watch --style=expanded --source-map",
    "build:all": "npm run sass && npm run build:enhanced",
    "dev:all": "concurrently \"npm run sass:watch\" \"npm run dev:enhanced\"",
    "lint": "eslint assets/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:all": "node tests/test-runner-enhanced.js",
    "test:integration": "node tests/test-runner-enhanced.js --integration-only",
    "test:performance": "node tests/test-runner-enhanced.js --performance-only",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "docs": "jsdoc -c jsdoc.conf.json -r",
    "docs:serve": "jsdoc -c jsdoc.conf.json -r -d docs && serve docs",
    "analyze": "ANALYZE=true webpack --config webpack.config.enhanced.js --mode production",
    "i18n:extract": "node scripts/extract-i18n.js",
    "accessibility:audit": "node scripts/accessibility-audit.js",
    "mobile:test": "node scripts/mobile-test.js",
    "webrtc:test": "node scripts/webrtc-test.js",
    "clean": "rimraf assets/js/dist assets/css/dist docs coverage",
    "precommit": "npm run lint && npm run test",
    "start": "npm run dev:all",
    "serve": "serve . -l 3000"
  },
  "keywords": [
    "chat",
    "messaging",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.23.2",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^30.0.2",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cypress": "^13.6.0",
    "eslint": "^8.51.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "mini-css-extract-plugin": "^2.9.2",
    "postcss-loader": "^8.1.1",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "core-js": "^3.33.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-core": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-window": "^7.0.0"
  }
}
