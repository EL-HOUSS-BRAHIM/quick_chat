# Quick Chat Environment Configuration
# Copy this file to .env and configure with your actual values

# Application Settings
APP_NAME="Quick Chat"
APP_URL="http://localhost/quick_chat"
APP_ENV="development"
DEBUG=true

# Database Configuration
DB_HOST="localhost"
DB_NAME="quick_chat"
DB_USER="your_db_username"
DB_PASS="your_db_password"
DB_CHARSET="utf8mb4"
DB_PORT=3306

# Database SSL Configuration (for production)
DB_SSL_ENABLED=false
DB_SSL_CA_PATH="./certs/ca.pem"

# Security Keys (IMPORTANT: Change these in production!)
ENCRYPTION_KEY="your-32-character-encryption-key-here"
JWT_SECRET="your-jwt-secret-key-here"
PASSWORD_PEPPER="your-password-pepper-here"

# Session Configuration
SESSION_LIFETIME=3600
REMEMBER_ME_LIFETIME=2592000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE="Strict"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth Configuration
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"

# Email Configuration (for password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@yoursite.com"
FROM_NAME="Quick Chat"

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH="uploads/"

# API Configuration
API_RATE_LIMIT=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# WebRTC Configuration
STUN_SERVERS="stun:stun.l.google.com:19302"
TURN_SERVERS=""

# Security Settings
SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=true
